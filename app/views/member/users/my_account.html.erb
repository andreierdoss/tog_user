<h2><span>Edit account</span></h2>

<% form_for(@user) do |f| %>
<dl class="cols clearfix">
   <dt><label for="login">Login</label></dt>
   <dd><%= @user.login %></dd>

    <dt><label for="email">Email address</label></dt>
    <dd><%= @user.email %></dd>

    <dt>&nbsp;</dt>
    <dd>
      <div class="clearfix">
        <% submit_tag 'Send', :class => "button mainaction" %>
      </div>
    </dd>

</dl>
<% end %>

<h2><span>Change password</span></h2>

<%= form_tag member_change_password_path %>
<dl class="cols clearfix">
  <dt><label for="old_password">Current Password</label></dt>
  <dd><%= password_field_tag 'old_password', @old_password %></dd>

  <dt><label for="password">New password</label></dt>
  <dd><%= password_field_tag 'password'  %></dd>

  <dt><label for="password_confirmation">Confirm new password</label></dt>
  <dd><%= password_field_tag 'password_confirmation' %></dd>

    <dt>&nbsp;</dt>
    <dd>
      <div class="clearfix">
        <%= submit_tag 'Change', :class => "button mainaction" %>
      </div>
    </dd>

</dl>
</form>

<h2><span>Remove account</span></h2>

<p><%= link_to 'destroy my account and all my fata', member_destroy_account_path, :confirm => 'We are going to remove your account and all your data. Are you sure?', :method => :delete %></p>